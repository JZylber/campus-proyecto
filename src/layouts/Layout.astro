---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>Campus Proyecto</title>
  </head>
  <body class="w-full">
    <div
      x-init="console.log('Alpine Layout initialized')"
      class="w-fill flex flex-col relative bg-ghost-white overflow-y-scroll"
      :class="{ 'h-[calc(100vh-64px-1rem)]': $store.pageData.onCampus, 'h-full': !$store.pageData.onCampus }"
    >
      <slot />
    </div>
  </body>
</html>
