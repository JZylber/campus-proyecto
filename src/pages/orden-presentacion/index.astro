---
import Loader from "../../components/misc/loader/Loader.astro";
import Group from "../../components/presentation/GroupBanner/Group.astro";
import Table from "../../components/presentation/Table/Table.astro";
import Layout from "../../layouts/Layout.astro";
---

<script>
  import presentationDataStore from "../../scripts/alpine/presentationData";
  document.addEventListener("alpine:init", () => {
    Alpine.store("presentationData", presentationDataStore(Alpine));
  });
</script>
<Layout>
  <main class="p-10 flex flex-col gap-y-6 min-h-full">
    <h1 class="font-poppins text-2xl">
      Hola<span
        x-text="' ' + $store.studentData.name"
        x-show="$store.studentData.name !== ''"></span>!
    </h1>
    <div x-show="$store.studentData.loading === true" class="grow">
      <Loader />
    </div>
    <Group />
    <Table />
  </main>
</Layout>
