---
const { img, category, value } = Astro.props;
---

<div class="flex grow gap-x-5">
  <img
    :src=`$store.pageData.publicURL('${img}')`
    alt="Category Image"
    class="w-20 h-20 object-cover"
  />
  <div class="flex flex-col font-poppins py-2 gap-y-2">
    <h2 class="font-normal text-sm text-silver-chalice">{category}</h2>
    <span class="font-semibold text-3xl" x-text={value}></span>
  </div>
</div>
